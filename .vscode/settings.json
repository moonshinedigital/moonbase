// Workspace settings
{
	"files.exclude": {
		"**/.vscode": true,
		"**/.git": true,
		"**/node_modules": true,
		"**/vendor": true,
		"**/theme/assets/css": true,
		"**/theme/assets/js": true
	},
	"search.exclude": {
		"**/.git": true,
		"**/node_modules": true,
		"**/vendor": true,
		"**/theme/assets/css": true,
		"**/theme/assets/js": true
	},
	"editor.insertSpaces": false,
	"html.format.templating": true,
	"files.insertFinalNewline": true,
	"html.format.maxPreserveNewLines": 1,
	"html.format.wrapAttributes": "preserve-aligned",
	"eslint.validate": [
		"vue",
		"html",
		"php",
		"javascript",
		"typescript",
		"javascriptreact",
		"typescriptreact"
	]
}
