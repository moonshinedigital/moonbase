{
	"name": "moonbase",
	"version": "1.0.0",
	"devDependencies": {
		"@_tw/themejson": "^0.1.2",
		"@angular-eslint/template-parser": "^16.1.0",
		"@tailwindcss/typography": "^0.5.9",
		"@wordpress/prettier-config": "^2.22.0",
		"alpinejs": "^3.12.3",
		"autoprefixer": "^10.4.15",
		"cssnano": "^6.0.1",
		"dir-archiver": "^1.1.1",
		"esbuild": "^0.19.2",
		"eslint": "^8.47.0",
		"eslint-config-prettier": "^9.0.0",
		"eslint-plugin-html": "^7.1.0",
		"eslint-plugin-php-markup": "^6.0.0",
		"eslint-plugin-tailwindcss": "^3.13.0",
		"npm-run-all": "^4.1.5",
		"postcss": "^8.4.28",
		"postcss-import-ext-glob": "^2.1.1",
		"prettier": "^3.0.2",
		"prettier-plugin-tailwindcss": "^0.5.3",
		"tailwindcss": "^3.3.3"
	},
	"scripts": {
		"dev:tailwind": "npx tailwindcss --postcss --use autoprefixer -c ./tailwind.config.js -i ./src/css/index.css -o ./theme/assets/css/index.css",
		"dev:esbuild": "npx esbuild ./src/js/main.js --bundle --minify --sourcemap --outdir=./theme/assets/js --out-extension:.js=.min.js",
		"dev": "run-p dev:**",
		"watch:tailwind": "npm run dev:tailwind --watch",
		"watch:esbuild": "npm run dev:esbuild --watch",
		"watch": "run-p watch:**",
		"lint:eslint": "npx eslint theme/",
		"lint:prettier": "npx prettier --check .",
		"lint": "run-p lint:*",
		"lint-fix:eslint": "npx eslint theme/ --fix",
		"lint-fix:prettier": "npx prettier --write .",
		"lint-fix": "run-p lint-fix:*",
		"build:tailwind": "npm run dev:tailwind --minify",
		"build:esbuild": "npm run dev:esbuild --minify",
		"build:bundle": "dir-archiver --src ./theme --dest ./moonbase.zip --exclude .DS_Store",
		"build": "run-s build:**"
	},
	"prettier": "@wordpress/prettier-config"
}
